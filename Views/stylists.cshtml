@{
  Layout="Shared/_Layout";
}

<div class="container">
  @if (Model.Count == 0)
  {
    <p>No stylists have been added yet!</p>
  }
  else
  {
    <h1>Here is a list of stylists:</h1>
    <ul>
      @foreach (var stylist in Model)
      {
        <li><a href="/stylists/@stylist.GetId()">@stylist.GetName(), @stylist.GetSalonId().GetName()</li>
      }
    </ul>
  }
  <p><a href="/stylists/new">Add a new Stylist</a></p>
  <p><a href="/">Return home</a></p>
  <form action="/stylists/delete" method="post">
    <button type="submit">Delete All Stylists</button>
  </form>
</div>
