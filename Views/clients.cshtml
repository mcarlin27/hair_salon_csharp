@{
  Layout="Shared/_Layout";
}

<div class="container">
  @if (Model.Count == 0)
  {
    <p>No clients have been added yet!</p>
  }
  else
  {
    <h1>Here is a list of all clients:</h1>
    <ul>
      @foreach (var client in Model)
      {
        <li><a href="/clients/@client.GetId()">@client.GetName()</li>
      }
    </ul>
  }
  <p><a href="/clients/new">Add a new Client</a></p>
  <p><a href="/">Return home</a></p>
</div>
