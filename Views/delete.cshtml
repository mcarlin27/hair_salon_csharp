@{
  Layout="Shared/_Layout";
}

@if(Model["form-type"] == "salon-delete")
{
  <div class="container">
    <h1>Delete Salon</h1>
    <hr/>
    <h2>Are you sure you want to delete this salon and all of its stylists?</h2>

    <h4>@Model["salon"].GetName()</h4>
    <form action='/salon/@Model["salon"].GetId()/delete' method="post">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit">Delete</button>
    </form>
  </div>
}

